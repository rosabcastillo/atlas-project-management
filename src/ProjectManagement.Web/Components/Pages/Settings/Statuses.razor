@page "/settings/statuses"
@using Microsoft.EntityFrameworkCore
@using ProjectManagement.Infrastructure.Data
@using ProjectManagement.Domain.Entities
@inject AppDbContext DbContext
@rendermode InteractiveServer

<PageTitle>Project Statuses - Settings</PageTitle>

<div class="page-header">
    <div>
        <h1 class="page-title">Project Statuses</h1>
        <p class="page-subtitle">Manage project status options and their colors</p>
    </div>
    <button class="btn btn-primary" @onclick="OpenAddModal">+ Add Status</button>
</div>

<div class="glass-card">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th class="sortable @(GetSortClass("Order"))" @onclick='() => SetSort("Order")' aria-sort="@(DisplayHelpers.GetAriaSort(sortColumn, sortAscending, "Order"))">Order</th>
                    <th class="sortable @(GetSortClass("Name"))" @onclick='() => SetSort("Name")' aria-sort="@(DisplayHelpers.GetAriaSort(sortColumn, sortAscending, "Name"))">Status Name</th>
                    <th>Color</th>
                    <th>Preview</th>
                    <th class="sortable @(GetSortClass("Projects"))" @onclick='() => SetSort("Projects")' aria-sort="@(DisplayHelpers.GetAriaSort(sortColumn, sortAscending, "Projects"))">Projects</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var status in PagedStatuses)
                {
                    <tr>
                        <td>@status.DisplayOrder</td>
                        <td><strong>@status.Name</strong></td>
                        <td>
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <div style="width: 24px; height: 24px; border-radius: 4px; background-color: @status.Color;"></div>
                                <code style="font-size: 0.75rem;">@status.Color</code>
                            </div>
                        </td>
                        <td>
                            <span class="status-badge" style="background-color: @status.Color;">@status.Name</span>
                        </td>
                        <td>@status.Projects.Count</td>
                        <td>
                            <button class="btn btn-secondary btn-sm" @onclick="() => OpenEditModal(status)">Edit</button>
                            @if (status.Projects.Count == 0)
                            {
                                <button class="btn btn-danger btn-sm" @onclick="() => ConfirmDelete(status)">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <PaginationBar CurrentPage="currentPage" PageSize="pageSize" TotalCount="TotalCount" OnPageChanged="GoToPage" />
</div>

@if (showModal)
{
    <div class="modal-backdrop" @onclick="CloseModal">
        <div class="modal" @onclick:stopPropagation="true" role="dialog" aria-labelledby="modal-title-status">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title-status">@(isEditing ? "Edit Status" : "Add Status")</h3>
                <button class="modal-close" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Status Name *</label>
                    <input type="text" class="form-control" @bind="currentStatus.Name" />
                    @if (!string.IsNullOrEmpty(statusError))
                    {
                        <div class="text-danger field-validation-error">@statusError</div>
                    }
                </div>
                <div class="form-group">
                    <label class="form-label">Display Order</label>
                    <input type="number" class="form-control" @bind="currentStatus.DisplayOrder" min="1" />
                </div>
                <div class="form-group">
                    <label class="form-label">Color</label>
                    <div style="display: flex; gap: 1rem; align-items: center;">
                        <input type="color" class="form-control" style="width: 60px; height: 40px; padding: 2px;" @bind="currentStatus.Color" />
                        <input type="text" class="form-control" style="width: 120px;" @bind="currentStatus.Color" placeholder="#000000" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Preview</label>
                    <div>
                        <span class="status-badge" style="background-color: @currentStatus.Color;">@(string.IsNullOrEmpty(currentStatus.Name) ? "Status Name" : currentStatus.Name)</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveStatus">Save</button>
            </div>
        </div>
    </div>
}

<ConfirmDeleteModal Visible="showDeleteConfirm"
    Message="@($"Are you sure you want to delete status \"{statusToDelete?.Name}\"?")"
    OnConfirm="DeleteStatus"
    OnCancel="CancelDelete" />

@code {
    private List<ProjectStatus> statuses = new();
    private bool showModal = false;
    private bool isEditing = false;
    private ProjectStatus currentStatus = new();
    private string? statusError = null;
    private bool showDeleteConfirm = false;
    private ProjectStatus? statusToDelete = null;

    // Pagination & Sorting
    private int currentPage = 1;
    private int pageSize = 10;
    private string sortColumn = "Order";
    private bool sortAscending = true;

    private IEnumerable<ProjectStatus> SortedStatuses
    {
        get
        {
            return sortColumn switch
            {
                "Order" => sortAscending ? statuses.OrderBy(s => s.DisplayOrder) : statuses.OrderByDescending(s => s.DisplayOrder),
                "Name" => sortAscending ? statuses.OrderBy(s => s.Name) : statuses.OrderByDescending(s => s.Name),
                "Projects" => sortAscending ? statuses.OrderBy(s => s.Projects.Count) : statuses.OrderByDescending(s => s.Projects.Count),
                _ => statuses.OrderBy(s => s.DisplayOrder)
            };
        }
    }

    private IEnumerable<ProjectStatus> PagedStatuses => SortedStatuses.Skip((currentPage - 1) * pageSize).Take(pageSize);
    private int TotalCount => statuses.Count;

    private void GoToPage(int pg) => currentPage = pg;

    private void SetSort(string column)
    {
        if (sortColumn == column)
            sortAscending = !sortAscending;
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
        currentPage = 1;
    }

    private string GetSortClass(string column) => sortColumn == column ? (sortAscending ? "asc" : "desc") : "";

    protected override async Task OnInitializedAsync()
    {
        await LoadStatuses();
    }

    private async Task LoadStatuses()
    {
        statuses = await DbContext.ProjectStatuses.Include(s => s.Projects).OrderBy(s => s.DisplayOrder).ToListAsync();
    }

    private void OpenAddModal()
    {
        var maxOrder = statuses.Any() ? statuses.Max(s => s.DisplayOrder) : 0;
        currentStatus = new ProjectStatus { DisplayOrder = maxOrder + 1, Color = "#6b7280" };
        isEditing = false;
        statusError = null;
        showModal = true;
    }

    private void OpenEditModal(ProjectStatus status)
    {
        currentStatus = new ProjectStatus { Id = status.Id, Name = status.Name, Color = status.Color, DisplayOrder = status.DisplayOrder };
        isEditing = true;
        statusError = null;
        showModal = true;
    }

    private void CloseModal() { statusError = null; showModal = false; }

    private async Task SaveStatus()
    {
        statusError = null;
        if (string.IsNullOrWhiteSpace(currentStatus.Name)) return;

        var nameToCheck = currentStatus.Name.Trim().ToLower();
        var duplicate = await DbContext.ProjectStatuses
            .AnyAsync(s => s.Name.ToLower() == nameToCheck && (!isEditing || s.Id != currentStatus.Id));
        if (duplicate)
        {
            statusError = "A status with this name already exists.";
            return;
        }

        if (isEditing)
        {
            var existing = await DbContext.ProjectStatuses.FindAsync(currentStatus.Id);
            if (existing != null)
            {
                existing.Name = currentStatus.Name;
                existing.Color = currentStatus.Color;
                existing.DisplayOrder = currentStatus.DisplayOrder;
                await DbContext.SaveChangesAsync();
            }
        }
        else
        {
            DbContext.ProjectStatuses.Add(currentStatus);
            await DbContext.SaveChangesAsync();
        }

        await LoadStatuses();
        CloseModal();
    }

    private void ConfirmDelete(ProjectStatus status)
    {
        statusToDelete = status;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        statusToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task DeleteStatus()
    {
        if (statusToDelete == null) return;
        DbContext.ProjectStatuses.Remove(statusToDelete);
        await DbContext.SaveChangesAsync();
        statusToDelete = null;
        showDeleteConfirm = false;
        await LoadStatuses();
    }
}
