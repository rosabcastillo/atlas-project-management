@page "/settings/themes"
@using Microsoft.EntityFrameworkCore
@using ProjectManagement.Infrastructure.Data
@using ProjectManagement.Domain.Entities
@inject AppDbContext DbContext
@rendermode InteractiveServer

<PageTitle>Themes - Settings</PageTitle>

<div class="page-header">
    <div>
        <h1 class="page-title">Themes</h1>
        <p class="page-subtitle">Manage project themes</p>
    </div>
    <button class="btn btn-primary" @onclick="OpenAddModal">+ Add Theme</button>
</div>

<div class="glass-card">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th class="sortable @(GetSortClass("Name"))" @onclick='() => SetSort("Name")' aria-sort="@(DisplayHelpers.GetAriaSort(sortColumn, sortAscending, "Name"))">Theme Name</th>
                    <th class="sortable @(GetSortClass("Projects"))" @onclick='() => SetSort("Projects")' aria-sort="@(DisplayHelpers.GetAriaSort(sortColumn, sortAscending, "Projects"))">Projects</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var theme in PagedThemes)
                {
                    <tr>
                        <td><strong>@theme.Name</strong></td>
                        <td>@theme.Projects.Count</td>
                        <td>
                            <button class="btn btn-secondary btn-sm" @onclick="() => OpenEditModal(theme)">Edit</button>
                            @if (theme.Projects.Count == 0)
                            {
                                <button class="btn btn-danger btn-sm" @onclick="() => ConfirmDelete(theme)">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <PaginationBar CurrentPage="currentPage" PageSize="pageSize" TotalCount="TotalCount" OnPageChanged="GoToPage" />
</div>

@if (showModal)
{
    <div class="modal-backdrop" @onclick="CloseModal">
        <div class="modal" @onclick:stopPropagation="true" role="dialog" aria-labelledby="modal-title-theme">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title-theme">@(isEditing ? "Edit Theme" : "Add Theme")</h3>
                <button class="modal-close" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Theme Name *</label>
                    <input type="text" class="form-control" @bind="currentTheme.Name" />
                    @if (!string.IsNullOrEmpty(themeError))
                    {
                        <div class="text-danger field-validation-error">@themeError</div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveTheme">Save</button>
            </div>
        </div>
    </div>
}

<ConfirmDeleteModal Visible="showDeleteConfirm"
    Message="@($"Are you sure you want to delete theme \"{themeToDelete?.Name}\"?")"
    OnConfirm="DeleteTheme"
    OnCancel="CancelDelete" />

@code {
    private List<Theme> themes = new();
    private bool showModal = false;
    private bool isEditing = false;
    private Theme currentTheme = new();
    private string? themeError = null;
    private bool showDeleteConfirm = false;
    private Theme? themeToDelete = null;

    // Pagination & Sorting
    private int currentPage = 1;
    private int pageSize = 10;
    private string sortColumn = "Name";
    private bool sortAscending = true;

    private IEnumerable<Theme> SortedThemes
    {
        get
        {
            return sortColumn switch
            {
                "Name" => sortAscending ? themes.OrderBy(t => t.Name) : themes.OrderByDescending(t => t.Name),
                "Projects" => sortAscending ? themes.OrderBy(t => t.Projects.Count) : themes.OrderByDescending(t => t.Projects.Count),
                _ => themes.OrderBy(t => t.Name)
            };
        }
    }

    private IEnumerable<Theme> PagedThemes => SortedThemes.Skip((currentPage - 1) * pageSize).Take(pageSize);
    private int TotalCount => themes.Count;

    private void GoToPage(int pg) => currentPage = pg;

    private void SetSort(string column)
    {
        if (sortColumn == column)
            sortAscending = !sortAscending;
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
        currentPage = 1;
    }

    private string GetSortClass(string column) => sortColumn == column ? (sortAscending ? "asc" : "desc") : "";

    protected override async Task OnInitializedAsync()
    {
        await LoadThemes();
    }

    private async Task LoadThemes()
    {
        themes = await DbContext.Themes.Include(t => t.Projects).OrderBy(t => t.Name).ToListAsync();
    }

    private void OpenAddModal()
    {
        currentTheme = new Theme();
        isEditing = false;
        themeError = null;
        showModal = true;
    }

    private void OpenEditModal(Theme theme)
    {
        currentTheme = new Theme { Id = theme.Id, Name = theme.Name };
        isEditing = true;
        themeError = null;
        showModal = true;
    }

    private void CloseModal() { themeError = null; showModal = false; }

    private async Task SaveTheme()
    {
        themeError = null;
        if (string.IsNullOrWhiteSpace(currentTheme.Name)) return;

        var nameToCheck = currentTheme.Name.Trim().ToLower();
        var duplicate = await DbContext.Themes
            .AnyAsync(t => t.Name.ToLower() == nameToCheck && (!isEditing || t.Id != currentTheme.Id));
        if (duplicate)
        {
            themeError = "A theme with this name already exists.";
            return;
        }

        if (isEditing)
        {
            var existing = await DbContext.Themes.FindAsync(currentTheme.Id);
            if (existing != null)
            {
                existing.Name = currentTheme.Name;
                await DbContext.SaveChangesAsync();
            }
        }
        else
        {
            DbContext.Themes.Add(currentTheme);
            await DbContext.SaveChangesAsync();
        }

        await LoadThemes();
        CloseModal();
    }

    private void ConfirmDelete(Theme theme)
    {
        themeToDelete = theme;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        themeToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task DeleteTheme()
    {
        if (themeToDelete == null) return;
        DbContext.Themes.Remove(themeToDelete);
        await DbContext.SaveChangesAsync();
        themeToDelete = null;
        showDeleteConfirm = false;
        await LoadThemes();
    }
}
