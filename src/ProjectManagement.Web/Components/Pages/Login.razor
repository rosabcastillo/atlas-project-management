@page "/login"
@using ProjectManagement.Web.Components.Layout
@layout AuthLayout
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization

<PageTitle>Login - Nova</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-logo">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="nova-svg">
                    <path d="M12 2L13.5 8.5L20 10L13.5 11.5L12 18L10.5 11.5L4 10L10.5 8.5L12 2Z" fill="white"/>
                    <path d="M12 6L12.75 9.25L16 10L12.75 10.75L12 14L11.25 10.75L8 10L11.25 9.25L12 6Z" fill="rgba(255,255,255,0.6)"/>
                    <circle cx="12" cy="10" r="2" fill="white"/>
                </svg>
            </div>
            <h1 class="login-title">Nova</h1>
            <p class="login-subtitle">Project Management</p>
        </div>

        @if (Error == "invalid")
        {
            <div class="alert alert-error">
                Invalid username or password.
            </div>
        }
        else if (Error == "empty")
        {
            <div class="alert alert-error">
                Please enter username and password.
            </div>
        }

        <form method="post" action="/account/login">
            <div class="form-group">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Enter username" required />
            </div>
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter password" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </form>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Error { get; set; }
}
