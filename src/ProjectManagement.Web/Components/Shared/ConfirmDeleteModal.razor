@if (Visible)
{
    <div class="modal-backdrop" @onclick="OnCancel">
        <div class="modal" style="max-width: 400px;" @onclick:stopPropagation="true" role="dialog" aria-labelledby="modal-title-confirm-delete">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title-confirm-delete">Confirm Delete</h3>
                <button class="modal-close" @onclick="OnCancel">&times;</button>
            </div>
            <div class="modal-body">
                <p style="color: var(--text-primary);">@Message</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
                <button class="btn btn-danger" @onclick="OnConfirm">Delete</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public string Message { get; set; } = "Are you sure you want to delete this item?";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
